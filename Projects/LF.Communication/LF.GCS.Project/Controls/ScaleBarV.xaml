<UserControl x:Class="LF.GCS.Project.Controls.ScaleBarV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LF.GCS.Project.Controls"
             mc:Ignorable="d" 
             Height="200" Width="AUTO">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="{StaticResource LineColor}" BorderThickness="1" Width="24" Height="200">
            <Rectangle Fill="#32D032" Height="100" VerticalAlignment="Top"></Rectangle>
        </Border>
        <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock Text="滚转 CH1" Margin="4"></TextBlock>
            <CheckBox Grid.Row="1" Content="反向" Margin="4"></CheckBox>
        </Grid>

    </Grid>

</UserControl>
